@model IEnumerable<Coin_Market_Example.Models.CoinModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Example of Market Coin</h2>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>#Symbol</th>
                <th>Name</th>
                <th>Added Date</th>
                <th>Last Updapted Date</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Symbol</td>
                <td>@item.Name</td>
                <td>@Convert.ToDateTime(item.AddedDate).ToShortDateString()</td>
                <td>@item.UpdateDate</td>
                <td>@Math.Round(Convert.ToDouble(item.Price), 2) $</td>
            </tr>
            }
        </tbody>
    </table>
</div>